
<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
 <% end %>
 <%= render 'books/list',book: @book ,user: @user%>


          <div class="col-xs-9">
			<table class= "table">
			 <thead>
			 	<tr>
					<th>image</th>
			 	  	<th>name</th>
			 	  	<th></th>
			 	</tr>
			 </thead>

			 <h3>Users</h3>
			 <tbody>
			   <% @users.each do |user| %>
			    <tr>
			    	<td><%= attachment_image_tag user, :profile_image, :fill, 50,50, format: 'jpeg',fallback: "no_image.jpg" %></td>
				    <td>
				     <%= user.name %>
				    </td>
				    <td>
				     <%= link_to "Show", user_path(user.id) %>
				    </td>
				     
			   </tr>  
			   <% end %>
			 </tbody> 
			 </table>
            </div>
	
   		
	</div>
</div>