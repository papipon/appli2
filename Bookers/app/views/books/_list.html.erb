<div class="container"> 
	<div class="row">
   		<div class="col-xs-3">
			<h2>User info</h2>

			<%= attachment_image_tag user, :profile_image, :fill, 50,50, format: 'jpeg',fallback: "no_image.jpg" %>
			


             <table class="table">
              
                <tbody>
                <tr>
	                 <th>Name</th>
	                 <th><%= user.name %></th>
                </tr>
                <tr>
	                 <th>introduction</th>
	                 <th><%= user.introduction %></th>
	             </tr>
                </tbody>
             </table>

             <%=link_to ' ', edit_user_path(user),class: "btn btn-default glyphicon glyphicon-wrench col-xs-12" %>
			<h3>New book</h3>

			<%= form_for(book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title,class: "book_title col-xs-12"  %>
			<h4>Opinion</h4>
			<%= f.text_area :body,class: "book_body col-xs-12"  %>
			<br><%= f.submit 'Create Book',class: 'btn btn-primary col-xs-12' %></br>
			<% end %>
		</div>