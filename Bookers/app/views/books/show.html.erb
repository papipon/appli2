<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
 <% end %>
<%= render 'books/list',book:@newbook,user:@book.user %>
   		<div class="col-xs-9">
			<table class="table">
			 <thead>
			 	<tr>
					<th></th>
			 	  	<th>Title</th>
			 	  	<th>Opinion</th>
			 	</tr>
			 </thead>
			 <h3>Book detail</h3>
			 <tbody>
			 	<td>
			       <%= link_to user_path(@book.user.id) do%> 
			        		<%= attachment_image_tag @book.user, :profile_image, :fill, 50,50, format: 'jpeg',fallback: "no_image.jpg" %>
			        			<%= @book.user.name %>
			        	<% end %>

			       </td>

				    <td>
				     <%= link_to @book.title,book_path %>
				    </td>
				    <td>
				     <%= @book.body %>
				    </td>
				    
				   <% if current_user.id == @book.user_id %>
				    <td>
				    <%= link_to "Edit", edit_book_path(@book.id),class: "btn btn-success edit_#{@book.id}" %>
				    </td>
				    <td>
				    <%= link_to "Destroy", book_path(@book.id), method: :delete,class: "btn btn-danger destroy_#{@book.id}" ,"data-confirm" => "Are you sure?" %>
				    </td>
				    <else>
				    	<td></td>
				    	<td></td>
				   <% end %>
			   </tr>  
			 
			 </tbody>   
			</table>
		</div>
	</div>
</div>